<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/accPrefs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Preferences"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="###-###-####"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="City, State"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/requestLocation"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@color/darkGray"
            android:fontFamily="sans-serif-condensed"
            android:text="Get Location"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/searchDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search Distance:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:paddingTop="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/accType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Type"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/pSeeker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Seeker" />

        <CheckBox
            android:id="@+id/pOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Owner" />

    </LinearLayout>

    <Button
        android:id="@+id/apply"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="275dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="8dp"
        android:background="@color/darkGray"
        android:fontFamily="sans-serif-condensed"
        android:text="Apply"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>